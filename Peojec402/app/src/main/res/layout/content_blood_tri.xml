<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_blood_tri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cs.peojec401.Blood.Blood_tri"
    tools:showIn="@layout/activity_blood_tri"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:text="วัน เดือน ปี"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView99"
                                    android:textStyle="normal|bold"
                                    android:textAlignment="center"
                                    android:textSize="18sp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="20dp" />

                                <TextView
                                    android:text="ผลตรวจเลือด"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView104"
                                    android:textStyle="normal|bold"
                                    android:textAlignment="center"
                                    android:textSize="18sp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="60dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray"
                                android:layout_marginTop="5dp"
                                android:layout_margin="5dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="20dp">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="1">

                                            <TextView
                                                android:text="15/06/2018"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_tri"
                                                android:textSize="18sp"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_tri2"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_tri3"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_tri4"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="10dp">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textAlignment="center">

                                            <TextView
                                                android:text="99"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_tri"
                                                android:textAlignment="center"
                                                android:textSize="18sp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_tri2"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_tri3"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_tri4"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="33dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/imageView14"
                                        android:visibility="invisible" />

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/im_sugar2" />

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="32dp"
                                        app:srcCompat="@drawable/up"
                                        android:id="@+id/im_sugar3"
                                        android:layout_marginTop="5dp" />

                                    <ImageView
                                        android:layout_height="32dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/im_sugar4"
                                        android:layout_width="35dp"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray"
                                android:layout_marginTop="5dp"
                                android:layout_margin="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">


                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:animateLayoutChanges="true">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:id="@+id/Headerlayout"
                                    android:animateLayoutChanges="true">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="10dp">

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageButton
                                                app:srcCompat="@drawable/blooddrop"
                                                android:background="@android:drawable/screen_background_light_transparent"
                                                android:scaleType="fitCenter"
                                                android:paddingRight="10dp"
                                                android:id="@+id/image"
                                                android:layout_marginLeft="10dp"
                                                android:layout_width="39dp"
                                                android:layout_height="41dp" />

                                            <TextView
                                                android:text="ค่าเฉลี่ยผลตรวจเลือด 4 ครั้ง"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/textView159"
                                                android:textStyle="normal|bold"
                                                android:textSize="18sp"
                                                android:textAlignment="center"
                                                android:layout_marginTop="10dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <TextView
                                                android:text="ค่าเฉลี่ย เท่ากับ"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/textView161"
                                                android:textAlignment="textStart"
                                                android:textSize="18sp"
                                                android:layout_marginLeft="50dp" />

                                            <TextView
                                                android:text="99"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/sum_tri"
                                                android:textSize="18sp"
                                                android:layout_marginLeft="20dp" />

                                            <TextView
                                                android:text="mg/dl"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/textView2"
                                                android:layout_marginLeft="10dp" />

                                        </LinearLayout>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="10dp">


                                        <SeekBar
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/seekBar14"
                                            android:max="600"
                                            android:progressBackgroundTint="@color/backGround"
                                            android:progressTint="@color/backGround"
                                            android:thumb="@drawable/check" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/imageView38"
                                            android:paddingEnd="15dp"
                                            android:paddingStart="10dp"
                                            app:srcCompat="@drawable/bar7" />

                                        <ProgressBar
                                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/seekBar7"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:progressDrawable="@drawable/custom_progressbar"
                                            android:progressTint="@color/cardview_shadow_start_color"
                                            android:max="700"
                                            android:visibility="gone" />




                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:padding="10dp"
                                            android:layout_margin="5dp"
                                            android:weightSum="1">

                                            <TextView
                                                android:text="@string/label7"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/textView117"
                                                android:textAlignment="textEnd"
                                                android:textStyle="normal|bold"
                                                android:textColor="@color/cast_intro_overlay_background_color" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/Childlayout"
                                    android:animateLayoutChanges="true"
                                    android:padding="15dp"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/nameofblood"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="5dp"
                                        android:text="ระดับไขมันในเส้นเลือด"
                                        android:textStyle="normal|bold"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:text="Triglyceride"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/Englishname"
                                        android:layout_weight="0.13" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/ligthGray"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="5dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/dialog_header"
                                        android:text="เกณฑ์มาตราฐาน"
                                        android:textStyle="normal|bold"
                                        android:textSize="16sp"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="10dp"
                                        android:textAlignment="textStart" />

                                    <TextView
                                        android:text="@string/tri_normal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tri_normal"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="0.13"
                                        android:visibility="visible" />

                                    <TextView
                                        android:text="@string/tri_abnormal2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tri_abnormal2"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="0.13"
                                        android:visibility="visible" />

                                    <TextView
                                        android:text="@string/tri_abnormal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tri_abnormal"
                                        android:layout_marginTop="10dp"
                                        android:paddingRight="40dp"
                                        android:layout_weight="0.13"
                                        android:visibility="visible" />

                                    <TextView
                                        android:text="@string/tri_abnormal3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tri_abnormal3"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="10dp"
                                        android:visibility="visible" />


                                    <TextView
                                        android:text="@string/INFO"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/INFO8"
                                        android:textStyle="normal|bold"
                                        android:textSize="16sp"
                                        android:layout_marginTop="15dp"
                                        android:layout_weight="0.13" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
