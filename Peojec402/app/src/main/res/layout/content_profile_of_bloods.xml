                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView150"
                                    android:layout_marginTop="35dp"
                                    android:textColor="@color/colorOrg" />

                                <TextView
                                    android:text="( 3.5 - 5.0 ) "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView149"
                                    android:layout_marginTop="35dp"
                                    android:textColor="@color/colorOrg" />

                                <TextView
                                    android:text="น้อยกว่า 200"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView148"
                                    android:layout_marginTop="30dp"
                                    android:textColor="@color/colorOrg" />

                                <TextView
                                    android:text="น้อยกว่า 100"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView147"
                                    android:layout_marginTop="30dp"
                                    android:textColor="@color/colorOrg" />

                                <TextView
                                    android:text="( 40 - 50 )"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView146"
                                    android:layout_marginTop="30dp"
                                    android:textColor="@color/colorOrg" />

                                <TextView
                                    android:text="( 40 - 149 )"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView145"
                                    android:layout_marginTop="30dp"
                                    android:textColor="@color/colorOrg" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
