<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile_of_bloods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cs.peojec401.ProfileOfBloodsActivity"
    tools:showIn="@layout/activity_profile_of_bloods">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.cs.peojec401.BloodsProfile">

            <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/blooddrop"
                        android:id="@+id/imageView21" />

                    <TextView
                        android:text="ประวัติผลตรวจเลือด"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView122"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="14sp"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical" />
                            </HorizontalScrollView>

                            <TextView
                                android:text="@string/sugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView136"
                                android:layout_marginTop="10dp"
                                android:textStyle="normal|bold"
                                android:textSize="16sp" />

                            <TextView
                                android:text="Sugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView135"
                                android:layout_marginBottom="10dp" />

                            <TextView
                                android:text="@string/sodium2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView134"
                                android:textStyle="normal|bold"
                                android:textSize="16sp" />

                            <TextView
                                android:text="@string/sodium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView138"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView137"
                                android:layout_marginTop="10dp"
                                android:textStyle="normal|bold"
                                android:textSize="16sp"
                                android:text="@string/potassium2" />

                            <TextView
                                android:text="@string/potassium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView133"
                                android:layout_marginBottom="10dp" />

                            <TextView
                                android:text="@string/colesteral2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView132"
                                android:textStyle="normal|bold"
                                android:textSize="16sp" />

                            <TextView
                                android:text="@string/colesteral"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView131"
                                android:layout_marginBottom="10dp" />

                            <TextView
                                android:text="@string/colesteral2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView130"
                                android:textStyle="normal|bold"
                                android:textSize="16sp" />

                            <TextView
                                android:text="@string/ldl"
                                android:layout_width="match_parent"
