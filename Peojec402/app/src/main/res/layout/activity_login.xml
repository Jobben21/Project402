<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfive">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:drawable/screen_background_light_transparent">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbarId="@+id/loginn"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:contentScrim="?attr/colorPrimary">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/loginn"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"></android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context="com.example.cs.peojec401.LoginActivity">

            <!-- Login progress -->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/login_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/email_login_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="169dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView63"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ลงชื่อเข้าใช้งาน"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="137dp"
                                app:cardCornerRadius="@dimen/cardview_shapefood"
                                app:cardElevation="3dp"
                                android:layout_margin="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical"
                                    android:padding="5dp"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:layout_width="266dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="296dp"
                                            android:layout_height="55dp"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/imageView24"
                                                android:layout_width="36dp"
                                                android:layout_height="31dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginTop="13dp"
                                                app:srcCompat="@drawable/username" />

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">


                                                <EditText
                                                    android:id="@+id/e_name"
                                                    android:layout_width="165dp"
                                                    android:layout_height="43dp"
                                                    android:hint="ชื่อผู้ใช้งาน (สมชาย)"
                                                    android:textSize="16sp" />

                                            </android.support.design.widget.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="305dp"
                                            android:layout_height="match_parent"

                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <ImageView
                                                android:id="@+id/key1"
                                                android:layout_width="35dp"
                                                android:layout_height="31dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginTop="15dp"
                                                app:srcCompat="@drawable/lock" />

                                            <android.support.design.widget.TextInputLayout

                                                android:layout_width="163dp"
                                                android:layout_height="wrap_content">

                                                <!--<EditText-->
                                                <!--android:id="@+id/e_pass"-->
                                                <!--android:layout_width="wrap_content"-->
                                                <!--android:layout_height="37dp"-->
                                                <!--android:layout_width="164dp"-->
                                                <!--android:layout_height="match_parent"/>-->

                                                <EditText
                                                    android:id="@+id/e_pass"
                                                    android:layout_width="191dp"
                                                    android:layout_height="match_parent"
                                                    android:ems="10"
                                                    android:hint="รหัสผู้ใช้งาน"
                                                    android:inputType="textPassword"
                                                    android:textSize="16sp" />

                                            </android.support.design.widget.TextInputLayout>

                                            <TextView
                                                android:id="@+id/eyeview1"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_marginBottom="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="10dp"
                                                android:layout_marginStart="20dp"
                                                android:layout_marginTop="20dp"
                                                android:background="@drawable/eye"
                                                android:textAlignment="viewStart" />


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView84"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="กรอกข้อมูลส่วนตัว"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="16sp"
                                android:textStyle="normal|bold" />


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_marginTop="5dp"
                                app:cardCornerRadius="@dimen/cardview_shapefood"
                                app:cardElevation="3dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="13dp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/imageView26"
                                            android:layout_width="32dp"
                                            android:layout_height="23dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="14dp"
                                            app:srcCompat="@drawable/ageee" />

                                        <ImageView
                                            android:id="@+id/imageView27"
                                            android:layout_width="31dp"
                                            android:layout_height="28dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="38dp"
                                            app:srcCompat="@drawable/standingo" />

                                        <ImageView
                                            android:id="@+id/imageView28"
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="28dp"
                                            android:paddingRight="3dp"
                                            app:srcCompat="@drawable/weighttt" />

                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="27dp"
                                            android:layout_weight="0.42">


                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/gender"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="2dp"
                                                    android:text="@string/Gender"
                                                    android:textColor="@color/dark_dark"
                                                    android:textSize="18sp" />

                                            </LinearLayout>

                                        </android.support.design.widget.TextInputLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="6dp"
                                            android:orientation="horizontal">

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">

                                                <EditText
                                                    android:id="@+id/Age_login"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_marginLeft="3dp"
                                                    android:ellipsize="start"
                                                    android:ems="10"

                                                    android:hint="@string/Age_login"
                                                    android:inputType="numberDecimal"
                                                    android:textSize="16sp" />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:orientation="horizontal">

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <EditText
                                                    android:id="@+id/Height_login"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:ellipsize="start"
                                                    android:ems="10"
                                                    android:hint="@string/height_login"

                                                    android:inputType="numberDecimal"
                                                    android:textSize="16sp" />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="51dp"
                                            android:layout_margin="6dp"
                                            android:orientation="horizontal">

                                            <android.support.design.widget.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <EditText
                                                    android:id="@+id/weight_login"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="3dp"
                                                    android:layout_weight="1"
                                                    android:ellipsize="start"
                                                    android:ems="10"

                                                    android:hint="@string/weight_login"
                                                    android:inputType="numberDecimal"
                                                    android:textSize="16sp" />
                                            </android.support.design.widget.TextInputLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:orientation="horizontal"
                                            android:padding="5dp">

                                            <RadioGroup
                                                android:id="@+id/radio_gender"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/w_gender"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_weight="0.79"
                                                    android:checked="true"
                                                    android:text="@string/man" />

                                                <RadioButton
                                                    android:id="@+id/m_gender"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_weight="2.04"
                                                    android:text="@string/women" />
                                            </RadioGroup>
                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <Button
                            android:id="@+id/email_sign_in_button"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/mybutton"
                            android:text="@string/action_sign_in"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
