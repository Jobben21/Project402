<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLayout"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        android:visibility="visible"
        android:background="@android:color/transparent">


    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginStart="48dp"
        app:expandedTitleMarginEnd="64dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:id="@+id/foodpic"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/menufood"
            app:layout_collapseMode="parallax" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:layout_collapseMode="pin"
            app:titleMargin="2dp" />



    </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/food_name"
                                    android:textSize="18sp"
                                    android:layout_marginTop="5dp"
                                    tools:text="แกงเหลือง"
                                    android:textStyle="normal|bold" />
                                <!--<TextView-->

                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:id="@+id/food_name"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:textSize="18sp"-->
                                <!--android:textAlignment="center" />-->

                                <!--<TextView-->
                                <!--android:id="@+id/textView71"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:layout_weight="1"-->
                                <!--android:text="1." />-->

                                <!--<TextView-->
                                <!--android:text="ส่วนประกอบ"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:id="@+id/textView41"-->
                                <!--android:layout_weight="1"-->
                                <!--android:layout_marginTop="5dp"-->
                                <!--android:textColor="@color/materialYellow" />-->

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp">

                                <TextView
                                    android:text="ส่วนประกอบอาหาร"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView41"
                                    android:textStyle="normal|bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorNavigation" />

                                <TextView
                                    android:text="ปลากะพงขอดเกล็ดล้างน้ําแล่เอาแต่เนื้อ 200 กรัม  "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Option_foods"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="5dp"
                                    android:textAlignment="viewStart"
                                    android:visibility="visible" />

                                <TextView
                                    android:text="มะละกอดิบ (1 ลูก) ปอกเปลือกนั่นแฉลบ 300 กรัม "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView43"
                                    android:layout_marginTop="5dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:text="ส้มแขกชิ้นบาง ๆ 10 ชิ้น"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView85"
                                    android:layout_marginTop="5dp"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="@dimen/shape_size"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp">

                                <TextView
                                    android:text="วิธีทำ"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView70"
                                    android:layout_weight="1"
                                    android:textStyle="normal|bold"
                                    android:textSize="18sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorNavigation" />

                                <TextView
                                    android:text="1. ทาน้ํามะนาวให้ทั่วชิ้นปลา นั่นเนื้อปลากะพงเป็นชิ้นขนาด 12 นิ้ว"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView69"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:visibility="visible" />

                                <TextView
                                    android:text="2. ใส่น้ําลงในหม้อ ตั้งไฟกลาง พอเดือด ใส่น้ําพริกแกง คนให้ละลาย ใส่มะละกอ สม แขก น้ําปลา น้ําตาลปีบ เดือดอีกครั้ง พอมะละกอสุก ใส่ปลา พอปลาสุก ชิมรส ปรับให้รส กลมกล่อม ปิดไฟ ตักใส่ถ้วย กินร้อน ๆ ช้อนชา "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView71"
                                    android:layout_weight="1"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="@dimen/shape_size">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:gravity="center_vertical|center"
                                android:layout_marginBottom="2dp"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    app:srcCompat="@drawable/value"
                                    android:id="@+id/imageView6"
                                    android:scaleType="fitXY"
                                    android:layout_weight="0.19" />

                                <TextView
                                    android:text="คุณค่าทางโภชนาการ"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="normal|bold"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:elevation="0dp" />

                                <TextView
                                    android:text="(ต่อ1 ที่)"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView100"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/red_btn_bg_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"></LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingTop="5dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:text="@string/EnergyFood"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView87"
                                        android:textStyle="normal|bold"
                                        android:paddingRight="5dp" />

                                    <TextView
                                        android:text="150"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/energy_food"
                                        android:layout_marginTop="5dp"
                                        android:textSize="24sp"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="70dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:paddingLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:text="@string/CarbohydrateFood"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView91"
                                        android:textStyle="normal|bold" />

                                    <TextView
                                        android:text="30"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/carbo_food"
                                        android:layout_marginTop="5dp"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginBottom="5dp"
                                android:paddingTop="5dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp">

                                    <TextView
                                        android:text="@string/Fat"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView94"
                                        android:textStyle="normal|bold" />

                                    <TextView
                                        android:text="2.6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/fat_food"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="70dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:text="@string/Protein"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView92"
                                        android:textStyle="normal|bold" />

                                    <TextView
                                        android:text="10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/protein_food"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:background="@color/colorPrimary"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="70dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp">

                                    <TextView
                                        android:text="@string/SugarFood"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView97"
                                        android:textStyle="normal|bold" />

                                    <TextView
                                        android:text="0"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/sugar_food"
                                        android:textAlignment="center"
                                        android:textSize="24sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <Button
                    android:text="กลับเมนูหลัก"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/close_dialog2"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:textStyle="normal|bold"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/mybutton"
                    android:layout_margin="15dp"
                    android:textColor="?android:attr/textColorTertiary" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>


