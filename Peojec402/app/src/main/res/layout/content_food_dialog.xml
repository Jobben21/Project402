<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="249dp"
                            app:srcCompat="@drawable/menufood"
                            android:id="@+id/MainDish_image"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp">

                                <TextView
                                    android:text="เต้าหูหล้น"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/MainDish_food"
                                    android:layout_weight="1"
                                    android:textStyle="normal|bold"
                                    android:textSize="18sp" />

                                <TextView
                                    android:text="ส่วนประกอบ"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView41"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/materialYellow" />

                                <TextView
                                    android:text="1."
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView71"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="?android:attr/colorControlHighlight"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp" />

                                <TextView
                                    android:text="วิธีทำ"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView70"
                                    android:layout_weight="1"
                                    android:textStyle="normal|bold"
                                    android:textSize="18sp"
                                    android:layout_marginTop="5dp"
                                    android:textColor="?attr/colorControlNormal" />

                                <TextView
                                    android:text="1. "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView69"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/ligthGray"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp" />

                                <TextView
                                    android:text="ตุณค่าทางโภชนาการ (ต่อ1 ที่)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textStyle="normal|bold"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/ligthGray"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp" />
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:text="@string/EnergyFood"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView87"
                                            android:textStyle="normal|bold"
                                            android:paddingRight="5dp" />

                                        <TextView
                                            android:text="170"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView85"
                                            android:layout_marginTop="5dp"
                                            android:textSize="24sp"
                                            android:textAlignment="center" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/colorPrimary"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_height="60dp" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:paddingLeft="5dp">

                                        <TextView
                                            android:text="@string/CarbohydrateFood"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView91"
                                            android:textStyle="normal|bold" />

                                        <TextView
                                            android:text="5.0"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView90"
                                            android:layout_marginTop="5dp"
                                            android:textAlignment="center"
                                            android:textSize="24sp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:padding="10dp"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="5dp">

                                        <TextView
                                            android:text="@string/Fat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView94"
                                            android:textStyle="normal|bold" />

                                        <TextView
                                            android:text="14.2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView93"
                                            android:textAlignment="center"
                                            android:textSize="24sp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/colorPrimary"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_height="60dp" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="5dp"
                                        android:paddingLeft="5dp">

                                        <TextView
                                            android:text="@string/Protein"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView92"
                                            android:textStyle="normal|bold" />

                                        <TextView
                                            android:text="5.6"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView95"
                                            android:textAlignment="center"
                                            android:textSize="24sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/colorPrimary"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_height="60dp" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="5dp">

                                        <TextView
                                            android:text="@string/SugarFood"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView97"
                                            android:textStyle="normal|bold" />

                                        <TextView
                                            android:text="1.0"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView96"
                                            android:textAlignment="center"
                                            android:textSize="24sp" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                        <Button
                            android:text="กลับเมนูหลัก"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/close_dialog2"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:textStyle="normal|bold"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:background="@drawable/mybutton" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>