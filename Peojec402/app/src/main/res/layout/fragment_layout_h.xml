<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:weightSum="1">


    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="367dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="@android:color/transparent">

        <android.support.design.widget.CollapsingToolbarLayout

            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:title=""
            app:expandedTitleMarginStart="46dp"
            app:expandedTitleMarginEnd="62dp"
            android:background="@drawable/bg_home"
            android:visibility="gone">


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="55dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:id="@+id/function1"
                    android:clickable="true"
                    android:layout_height="150dp"
                    android:layout_width="130dp"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                app:srcCompat="@drawable/bloodt"
                                android:id="@+id/imageView2" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:text="ผลตรวจเลือด"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView115"
                                android:textStyle="normal|bold"
                                android:textAlignment="center" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:id="@+id/function2"
                    android:clickable="true"
                    android:layout_height="150dp"
                    android:layout_width="130dp"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="23dp">

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@drawable/menu"
                                android:id="@+id/imageView18"
                                android:layout_height="65dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="เมนูอาหารเเนะนำ"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView118"
                                android:textAlignment="center"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:id="@+id/function3"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@drawable/run"
                                android:id="@+id/imageView19"
                                android:layout_height="65dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="คำนวณพลังงาน"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView120"
                                android:textAlignment="center"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:id="@+id/function4"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@drawable/pro"
                                android:id="@+id/imageView20"
                                android:layout_height="65dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:text="ประวัติส่วนตัว"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView121"
                                android:textStyle="normal|bold"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="1"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/one"
                    android:weightSum="1"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/oneh"
                        android:background="@drawable/imageview_selector"
                        android:layout_height="69dp"
                        style="@android:style/Widget.Holo.ImageButton"
                        android:soundEffectsEnabled="false"
                        android:contextClickable="true"
                        android:src="@drawable/blooddrop"
                        android:scaleType="fitXY"
                        android:layout_width="65dp" />

                    <TextView
                        android:text="Blood-Test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="ผลตรวจเลือด"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/two"
                    android:weightSum="1"
                    android:padding="10dp"
                    android:background="@drawable/imageview_selector">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="69dp"
                        android:id="@+id/twoh"
                        android:src="@drawable/recipe"
                        android:scaleType="fitXY"
                        android:background="@drawable/imageview_selector" />

                    <TextView
                        android:text="Food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="เมนูอาหารเเนะนำ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/three"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="73dp"
                        android:id="@+id/threeh"
                        android:background="@drawable/energy3"
                        android:layout_height="69dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/energy3" />

                    <TextView
                        android:text="Enegy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="คำนวนพลังงาน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/four"
                    android:weightSum="1"
                    android:padding="10dp"
                    android:layout_marginRight="20dp">

                    <ImageButton
                        android:id="@+id/fourh"
                        android:layout_weight="0.15"
                        android:layout_height="69dp"
                        android:layout_width="73dp"
                        android:src="@drawable/agenda"
                        android:scaleType="fitXY"
                        android:background="@android:drawable/screen_background_light_transparent" />

                    <TextView
                        android:text="Profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="ประวัติส่วนตัว"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>