<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:weightSum="1">


    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="367dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="288dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_weight="0.92">

        <android.support.design.widget.CollapsingToolbarLayout

            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:title=""
            app:expandedTitleMarginStart="46dp"
            app:expandedTitleMarginEnd="62dp"
            android:background="@drawable/bg_home">


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="369dp"
        android:layout_height="263dp"
        app:layout_behavior="@string/app_name"
        android:id="@+id/home"
        tools:layout_editor_absoluteY="296dp"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backGround">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/one"
                    android:weightSum="1"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/oneh"
                        android:background="@drawable/imageview_selector"
                        android:layout_height="69dp"
                        style="@android:style/Widget.Holo.ImageButton"
                        android:soundEffectsEnabled="false"
                        android:contextClickable="true"
                        android:src="@drawable/blooddrop"
                        android:scaleType="fitXY"
                        android:layout_width="65dp" />

                    <TextView
                        android:text="Blood-Test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="ผลตรวจเลือด"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/two"
                    android:weightSum="1"
                    android:padding="10dp"
                    android:background="@drawable/imageview_selector">

                    <ImageButton
                        android:layout_width="75dp"
                        android:layout_height="69dp"
                        android:id="@+id/twoh"
                        android:src="@drawable/recipe"
                        android:scaleType="fitXY"
                        android:background="@drawable/imageview_selector" />

                    <TextView
                        android:text="Food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="เมนูอาหารเเนะนำ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/three"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="73dp"
                        android:id="@+id/threeh"
                        android:background="@drawable/imageview_selector"
                        android:layout_height="69dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/run" />

                    <TextView
                        android:text="Enegy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="คำนวนพลังงาน"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/four"
                    android:weightSum="1"
                    android:padding="10dp"
                    android:layout_marginRight="20dp">

                    <ImageButton
                        android:id="@+id/fourh"
                        android:layout_weight="0.15"
                        android:layout_height="69dp"
                        android:layout_width="73dp"
                        android:src="@drawable/pro"
                        android:scaleType="fitXY"
                        android:background="@drawable/imageview_selector" />

                    <TextView
                        android:text="Profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray" />

                    <TextView
                        android:text="ประวัติส่วนตัว"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>