<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_after_cal_culat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cs.peojec401.AfterCalCulat"
    tools:showIn="@layout/activity_after_cal_culat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:theme="@style/AppTheme2">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="@dimen/cardview_shapefood"
                android:layout_margin="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="63dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/mt"
                            android:id="@+id/imageViewFood" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:text="@string/BMR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView49"
                                android:layout_weight="1"
                                android:textStyle="normal|bold"
                                android:textSize="18sp" />

                            <TextView
                                android:text="@string/BMI2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView37"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="@string/BMR3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView52"
                                android:textStyle="normal|bold"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:text="@string/explanation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView51"
                                    android:textColor="@color/red_btn_bg_color" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/explanation_BMI"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:weightSum="1"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bmi"
                            android:textStyle="normal|bold"
                            android:textSize="40sp"
                            android:layout_marginLeft="30dp" />

                        <TextView
                            android:text="มวล"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView55"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp" />

                        <ImageButton
                            app:srcCompat="@drawable/info"
                            android:id="@+id/BMIinformation"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:layout_marginLeft="40dp"
                            android:scaleType="fitXY"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="21dp"
                            android:layout_height="21dp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="@dimen/cardview_shapefood"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp">

                        <ImageView
                            android:layout_width="63dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/energy2"
                            android:id="@+id/imageView7" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp">

                            <TextView
                                android:text="@string/BMI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView49"
                                android:layout_weight="1"
                                android:textStyle="normal|bold"
                                android:textSize="18sp" />

                            <TextView
                                android:text="@string/BMR2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView37"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ligthGray"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="@string/BMI3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView52"
                                android:textStyle="normal|bold"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView51" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/explanation_BMI"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bmr"
                            android:textStyle="normal|bold"
                            android:textSize="40sp" />

                        <TextView
                            android:text="เเคลอรี่"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView55"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <Button
                android:text="เมนูหลัก"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_cal"
                android:layout_weight="1"
                android:textSize="14sp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/mybutton"
                android:textColor="?android:attr/textColorPrimaryDisableOnly" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
