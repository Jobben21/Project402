<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_blood__sodium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cs.peojec401.Blood.Blood_sodium"
    tools:showIn="@layout/activity_blood_sodium"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:text="วัน เดือน ปี"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView99"
                                    android:textStyle="normal|bold"
                                    android:textAlignment="center"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="20dp" />

                                <TextView
                                    android:text="ผลตรวจเลือด"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView104"
                                    android:textStyle="normal|bold"
                                    android:textAlignment="center"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:layout_marginRight="30dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray"
                                android:layout_marginTop="5dp"
                                android:layout_margin="5dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="20dp">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="10dp"
                                            android:layout_weight="1">

                                            <TextView
                                                android:text="15/06/2018"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_sodium"
                                                android:textSize="18sp"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_sodium2"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_sodium3"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/date_sodium4"
                                                android:textSize="18sp"
                                                android:layout_marginTop="10dp"
                                                android:visibility="visible"
                                                android:textAlignment="center" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="10dp">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textAlignment="center">

                                            <TextView
                                                android:text="99"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_sodium"
                                                android:textAlignment="center"
                                                android:textSize="18sp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_sodium2"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_sodium3"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />

                                            <TextView
                                                android:text="-"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/data_sodium4"
                                                android:textAlignment="center"
                                                android:textSize="18sp"
                                                android:visibility="visible"
                                                android:layout_marginTop="10dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="33dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/imageView14"
                                        android:visibility="invisible" />

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="30dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/im_sugar2" />

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="32dp"
                                        app:srcCompat="@drawable/up"
                                        android:id="@+id/im_sugar3"
                                        android:layout_marginTop="5dp" />

                                    <ImageView
                                        android:layout_height="32dp"
                                        app:srcCompat="@drawable/down"
                                        android:id="@+id/im_sugar4"
                                        android:layout_width="35dp"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/ligthGray"
                                android:layout_marginTop="5dp"
                                android:layout_margin="5dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/Headerlayout"
                                android:animateLayoutChanges="true">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageButton
                                            android:layout_width="39dp"
                                            app:srcCompat="@drawable/blooddrop"
                                            android:background="@android:drawable/screen_background_light_transparent"
                                            android:scaleType="fitCenter"
                                            android:paddingRight="10dp"
                                            android:id="@+id/image"
                                            android:layout_height="41dp"
                                            android:layout_marginLeft="10dp" />

                                        <TextView
                                            android:text="ค่าเฉลี่ยผลตรวจเลือด 4 ครั้ง"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView159"
                                            android:textStyle="normal|bold"
                                            android:textSize="18sp"
                                            android:textAlignment="center"
                                            android:layout_marginTop="10dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/sum_choles">

                                        <TextView
                                            android:text="ค่าเฉลี่ย เท่ากับ"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView161"
                                            android:textAlignment="textStart"
                                            android:textSize="18sp"
                                            android:layout_marginLeft="50dp" />

                                        <TextView
                                            android:text="99"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/sum_sodium"
                                            android:textSize="18sp"
                                            android:layout_marginLeft="20dp" />

                                        <TextView
                                            android:text="mg/dl"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView2"
                                            android:layout_marginLeft="10dp" />

                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp">


                                    <SeekBar
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/seekBar9"
                                        android:thumb="@drawable/check"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:progressBackgroundTint="@color/backGround"
                                        android:progressTint="@color/backGround"
                                        android:max="200" />

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView15"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        app:srcCompat="@drawable/bars2" />

                                    <ProgressBar
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/seekBar2"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:max="250"
                                        android:progressDrawable="@drawable/custom_progressbar"
                                        android:progress="146"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp">

                                        <TextView
                                            android:text="@string/label2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/textView98"
                                            android:textAlignment="textEnd"
                                            android:textStyle="normal|bold"
                                            android:paddingStart="10dp"
                                            android:textColor="@color/cast_intro_overlay_background_color" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/Childlayout"
                                android:animateLayoutChanges="true"
                                android:padding="15dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/nameofblood"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="5dp"
                                    android:text="ระดับโซเดียม"
                                    android:textStyle="normal|bold"
                                    android:textSize="18sp" />

                                <TextView
                                    android:text="Sodium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Englishname"
                                    android:layout_weight="0.13" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/ligthGray"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="5dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/dialog_header"
                                    android:text="เกณฑ์มาตราฐาน"
                                    android:textStyle="normal|bold"
                                    android:textSize="16sp"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="textStart" />

                                <TextView
                                    android:text="@string/sodium_normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodium_normal"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="0.13"
                                    android:visibility="visible" />

                                <TextView
                                    android:text="@string/sodium_abnormal2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodium_abnormal2"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="0.13"
                                    android:visibility="visible" />

                                <TextView
                                    android:text="@string/sodium_abnormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodium_abnormal"
                                    android:layout_marginTop="10dp"
                                    android:paddingRight="40dp"
                                    android:layout_weight="0.13"
                                    android:visibility="visible" />

                                <TextView
                                    android:text="@string/sodiumt_normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodiumt_normal"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="0.13"
                                    android:visibility="gone" />

                                <TextView
                                    android:text="@string/sodiumt_abnormal2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodiumt_abnormal2"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="0.13"
                                    android:visibility="gone" />

                                <TextView
                                    android:text="@string/sodiumt_abnormal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sodiumt_abnormal"
                                    android:layout_marginTop="10dp"
                                    android:paddingRight="40dp"
                                    android:layout_weight="0.13"
                                    android:visibility="gone" />

                                <TextView
                                    android:text="@string/INFO"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/INFO3"
                                    android:textStyle="normal|bold"
                                    android:textSize="16sp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="0.13"
                                    android:autoText="false"
                                    android:autoLink="web"
                                    android:clickable="true"
                                    android:linksClickable="true" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
