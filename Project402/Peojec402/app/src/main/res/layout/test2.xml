<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:background="@color/backGround"
android:layout_margin="10dp"
app:layout_anchorGravity="center_vertical"
android:gravity="center">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:layout_gravity="center"
    android:gravity="center">

    <android.support.v7.widget.CardView

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="160dp"
        android:layout_width="160dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgclickpurple"
                android:src="@drawable/ic_android_black_24dp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="Blood Testing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ligthGray" />

            <TextView
                android:text="วิเคราะห์ผลตรวจเลือด"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:padding="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="160dp"
        android:layout_width="160dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgclickpink"
                android:src="@drawable/ic_assignment_ind_black_24dp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ligthGray" />

            <TextView
                android:text="เมนูอาหารตามโรค 4 โรค"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAlignment="center"
                android:padding="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="160dp"
        android:layout_width="160dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgclickgreen"
                android:src="@drawable/ic_card_giftcard_black_24dp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="Food Recomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ligthGray" />

            <TextView
                android:text="เมนูอาหารเพื่อสุขภาพ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAlignment="center"
                android:padding="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="160dp"
        android:layout_width="160dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bgclickorange"
                android:src="@drawable/ic_announcement_black_24dp"
                android:padding="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ligthGray" />

            <TextView
                android:text="คำนวนพลังงาน บันทึกเมนูอาหาร"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAlignment="center"
                android:padding="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

</LinearLayout>